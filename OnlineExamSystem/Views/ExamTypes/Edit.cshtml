  @model DataModel.ExamTypesDataModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ExamTypes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ExamTypeName" class="control-label"></label>
                <input asp-for="ExamTypeName" class="form-control" />
                <span asp-validation-for="ExamTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DifficultyLevelId" class="control-label"></label>
                <select asp-for="DifficultyLevelId" class="form-control" asp-items="ViewBag.DifficultyLevelId"></select>
                <span asp-validation-for="DifficultyLevelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfQuestions" class="control-label"></label>
                <input asp-for="NumberOfQuestions" class="form-control" />
                <span asp-validation-for="NumberOfQuestions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <table class="table">
                    <thead>
                        <tr>
                            <th>

                            </th>
                            <th>

                            </th>
                            <th>
                                difficulty level
                            </th>
                            <th>
                                Number of questions
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int counter = 0;
                        }
                        @foreach (var item in Model.examTypesDetails)
                        {


                            <tr>
                                <td style="visibility:hidden">
                                    <input asp-for="@item.Id" type="hidden" name="examTypesDetails[@counter].Id" id="examTypesDetails[@counter].Id" />
                                </td>
                                <td style="visibility:hidden">
                                    <input asp-for="@item.DifficultyLevelId" name="examTypesDetails[@counter].DifficultyLevelId" id="examTypesDetails[@counter].DifficultyLevelId" type="hidden" />
                                </td>
                                <td>
                                    <label> @item.DifficultyLevelName"</label>
                                </td>
                                <td>

                                    <input asp-for="@item.NumberOfQuestions" class="form-control" name="examTypesDetails[@counter].NumberOfQuestions" id="examTypesDetails[@counter].NumberOfQuestions" />
                                    @Html.ValidationMessageFor(x => Model.examTypesDetails[counter].NumberOfQuestions)
                                </td>


                            </tr>
                            counter++;
                        }
                    </tbody>
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
